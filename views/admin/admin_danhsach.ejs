    <a class="dropdown-item" href="#">Separated link</a>
  </div>
</div>
<button style="float: right;" type="button" class="btn btn-danger btn-icon-text">
  <i class="mdi mdi-upload btn-icon-prepend"></i>                                                    
  Thêm mới
</button>
          <div class="table-responsive">
            <table class="table table-hover text-sm">
              <thead>
                <tr>
                  <th scope="col" width="10%">ID Admin</th>
                  <th scope="col">Ảnh đại diện</th>
                  <th scope="col" width="10%">Tên đăng nhập</th>
                  <th scope="col" width="10%">Mật khẩu</th>
                  <th scope="col">Họ tên</th>
                  <th scope="col">Giới tính</th>
                  <th scope="col" width="20%">Email</th>
                  <th scope="col">Điện thoại</th>
                
                  <th width="5%">Tùy chọn</th>
                  
                </tr>
              </thead>
              <% tbl_admin.forEach(function(tk){ %>
              <tbody>
              

                  <tr>
                    <th scope="row"><%= tk.ID_AD %></th>
                    <td><img src="<%- tk.AnhDaiDien_AD %>" border-radius="10px" width="100" height="100" ></td>
                    <td><%=tk.TenDangNhap_AD %></td>
                    <td>******</td>
                    <td><%=tk.HoTen_AD %></td>
                    <td><%=tk.GioiTinh %></td>
                    <td><%=tk.Email_AD %></td>
                    <td><%=tk.DienThoai_AD %></td>
                 
                    <th>
                      <!-- Example single danger button -->
<div class="btn-group">
  <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Chức năng
  </button>
  <div class="dropdown-menu">
    <a class="dropdown-item" href="#">Action</a>
    <a class="dropdown-item" href="#">Another action</a>
    <a class="dropdown-item" href="#">Something else here</a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="#">Separated link</a>
  </div>
</div>
                    </th>
                  </tr>
                </tbody>
                <% });%>
             
            </table>
          </div>
        </div>
      </div>
    </div>
    
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include('Views_Include/footer'); %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="/public_admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="/public_admin/vendors/chart.js/Chart.min.js"></script>
    <script src="/public_admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="/public_admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
