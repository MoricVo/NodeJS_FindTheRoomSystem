<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link
      rel="stylesheet"
      href="/public_admin/vendors/mdi/css/materialdesignicons.min.css"
    />
    <link
      rel="stylesheet"
      href="/public_admin/vendors/base/vendor.bundle.base.css"
    />
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link
      rel="stylesheet"
      href="/public_admin/vendors/datatables.net-bs4/dataTables.bootstrap4.css"
    />
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="/public_admin/css/style.css" />
    <!-- endinject -->
    <link rel="shortcut icon" href="/public_admin/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_navbar.html -->
      <%- include('Views_Include/navbar'); %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <%- include('Views_Include/sidebar'); %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
           
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Dữ liệu bài đăng!</h4>
          <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a  class="breadcrumb-item"><i class="mdi mdi-home"></i>Trang chủ</a>
                <a href="/views_danhsach_baidang"  class="breadcrumb-item text-success"> Danh sách bài đăng</a>
                <span class="breadcrumb-item active">Chỉnh sửa bài đăng</span>
            </nav>
        </div>
        
        <div class="btn-group ">
          <div class="col-lg-15  ">
              <form class="d-flex" role="search">
                  <input style="max-width:250px;max-height:40px; border-color: darkblue;padding-right: 30px;" class="form-control me-2 " type="search" placeholder="Bạn muốn tìm gì?" aria-label="Search">
      
              </form>
          </div>
      </div>
      <!-- Example single danger button -->
      <div class="btn-group">
        <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
           ----Chủ đề----
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Separated link</a>
        </div>
      </div>
      <button style="float: right;" type="button" class="btn btn-danger btn-icon-text">
        <i class="mdi mdi-upload btn-icon-prepend"></i>                                                    
        Thêm mới
      </button>
          <div class="table-responsive">
            <table class="table table-hover text-sm">
              <thead>
                <tr>
              
              <th scope="col " >ID</th>
              <th scope="col">ID trọ</th>
              <th scope="col">Ảnh</th>   
              <th scope="col">Người đăng</th>
              <th scope="col">Tiêu đề</th>
              <th scope="col">Nội dung</th>
             
              <th scope="col">Ngày đăng</th>
              <th scope="col">Ngày cập nhật</th>
              <th scope="col">Lượt xem</th>
              <th scope="col">Ghi chú</th>
              <th scope="col">Kiểm duyệt</th>
            
                </tr>
              </thead>
              <tbody>
                <% tbl_baidang.forEach(function(bd){ %>
    
                  <tr>
                  
                    <th scope="row" class=" text-danger"><%= bd.ID_BD %></th>
                    <th><%= bd.ID_NhaTro_BD %></th>
                    <td ><img src="<%- bd.Anh_BD %>" border-radius="10px" width="100" height="100" ></td>
                    <td><%=bd.TenNguoiDang_BD %></td>
                    <td><%=bd.TieuDe_BD %></td>
                    <td><%=bd.NoiDung_BD %></td>
                  
                    <td><%=bd.NgayDang_BD %></td>
                    <td><%=bd.NgayCapNhat_BD %></td>
                    <td><%=bd.LuotXem_BD %></td>
                    <td><%=bd.GhiChu_BD %></td>
                    <td class="align-middle text-center">
                      <% if(bd.KiemDuyet_BD == 1) { %>
                          <a href="/views_danhsach_baidang/duyet/<%= bd.ID_BD %>"><i class="mdi mdi-checkbox-multiple-marked-circle"></i></a>
                      <% } else { %>
                          <a href="/views_danhsach_baidang/duyet/<%= bd.ID_BD %>"><i class="mdi mdi-close-octagon text-danger"></i></a>
                      <% } %>
                  </td>
                  
                  </tr>
                </tbody>
                <% });%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
          <%- include('Views_Include/footer'); %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <!-- plugins:js -->
    <script src="/public_admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="/public_admin/vendors/chart.js/Chart.min.js"></script>
    <script src="/public_admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="/public_admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="/public_admin/js/off-canvas.js"></script>
    <script src="/public_admin/js/hoverable-collapse.js"></script>
    <script src="/public_admin/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="/public_admin/js/dashboard.js"></script>
    <script src="/public_admin/js/data-table.js"></script>
    <script src="/public_admin/js/jquery.dataTables.js"></script>
    <script src="/public_admin/js/dataTables.bootstrap4.js"></script>
    <!-- End custom js for this page-->
  </body>
</html>
