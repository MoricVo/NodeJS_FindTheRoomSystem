  <script src="http://localhost:3000/js/sweetalert2.js"></script>
    <style>
        
    </style>
  </head>
  <body>
      <%- include('Views_Include/navbar') %>
      <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(https://images.squarespace-cdn.com/content/v1/56d4bb112eeb815c06da8940/1521077045238-CJOE4I8E9HMUUY2VMK74/press+and+media.png);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
          <div class="row align-items-center justify-content-center text-center">
            <div class="col-md-10">
              <span class="d-inline-block text-white px-3 mb-3 property-offer-type rounded"></span>
              <h1 class="mb-2">BÀI ĐĂNG</h1>
              <p class="mb-5"><strong class="h2 text-success font-weight-bold"></strong></p>
            </div>
          </div>
        </div>
      </div>
  
      <!--Bài đăng-->
      <div class="container mt-5">
      
        <% BaiDang.forEach(function(bd){ %>
        <div class="row mb-4">
        <div class="col-md-12">
          <div class="property-entry horizontal d-lg-flex">

            <a href="/baidang/chitiet/<%= bd.ID_BD %>" class="property-thumbnail h-100">
              <div class="offer-type-wrap">
                <span class="offer-type bg-primary">LƯỢT XEM: <%= bd.LuotXem_BD %> <i class="bi bi-eye"></i></span>
              </div>
              <div style="height: 300px;">
                <img src="<%- firstImage(bd.NoiDung_BD) %>" alt="Image" class="img-fluid">
            </div>
            </a>

            <div class="p-4 property-body">
              <h2 class="property-title"><a href="/baidang/chitiet/<%= bd.ID_BD %>" class="ten tomtat"><%= bd.TieuDe_BD %></a></h2>
              <span class="property-location d-block mb-3"><i class="bi bi-person-lines-fill"></i> <%= bd.Ten_ND %></span>
              
              <p class="tomtat"><%= bd.TomTat_BD %></p>
              <ul class="property-specs-wrap mb-3 mb-lg-0">
                <li>
                  <span class="property-specs">ng</span>
                  <span class="property-specs-number"><%= new Date(bd.NgayDang_BD).getDate() %> </span>
                  
                </li>
                <li>
                  <span class="property-specs">Th</span>
                  <span class="property-specs-number"><%= new Date(bd.NgayDang_BD).getMonth()+1 %></span>
                  
                </li>
                <li>
                  <span class="property-specs">n</span>
                  <span class="property-specs-number"><%= new Date(bd.NgayDang_BD).getFullYear() %></span>
                  
                </li>
                
              </ul>
              
            </div>
            
          </div>
            <div>
                <span class="arrow-up"></span>
                <a class="btn docthem" href="/baidang/chitiet/<%= bd.ID_BD %>">Đọc thêm <i class="bi bi-three-dots"></i></a>
            </div>
        </div>
      </div>
      <% }) %>
      

      <div class="row mt-5">
        <div class="col-md-12">
          <div id="app" class="text-center">
            <button class="button active" value="0">1</button>
            <% for(var i=1; i<Math.ceil(SoLuong_BD.count/3); i++){ %>
              <button class="button" value="<%= i %>"><%= i+1 %></button>
            <% } %>
          </div>
      </div>
      
    </div>

    

  <!--end Nhà trọ-->
    <%- include('Views_Include/footer'); %>


  <%- include('Views_Include/js'); %>
  </body>
<script>
  // Add active class to the current button (highlight it)
$(function()
{
    var button = $('.button');

    function switchToNext()
    {
        var _this = $(this);
        
        if(_this.hasClass('active'))
            return false;
        else
        {
            $('.button.active').removeClass('active');
            _this.addClass('active');
        }

    }

    button.on('click',switchToNext);
});


function fetch_data(page){
		fetch('/baidang/tintuc/'+ page.value +'?index=' + page.value).then(
			function(response){
				return response.json();
			}
		).then(function(responseData){
			var html = '';
			for(var count = 0; count<responseData.length; count++){
				html += '';
			}
			
			child_el.innerHTML = html;
		});
	}
</script>
  
</html>