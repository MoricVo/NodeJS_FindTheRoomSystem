<body style="background-color: white;">
  
    <div class="navbar">
      <%- include('Views_Include/navbar'); %>
    </div>

    <div class="col-12 text-right">
      <a type="button" class="btn btn-success position-relative text-right" href="/nhatro/dangky_nhatro">Đăng ký trọ</a>
    </div>
    <div class="main">
      
      <figure class="figure">
        <!--<img src="/Logo.png" class="figure-img img-fluid rounded" alt="...">-->
        <figcaption class="figure-caption">NỔI BẬT</figcaption>
      </figure>
      
    </div>
    
    


        <div class="row border-bottom pb-2">
          <% NhaTro.forEach(function(nt){%>
          <div class="col-md-6 mb-3">
            
                <div class="card card-body" style="border: 1px solid rgb(242, 239, 239);">
                  <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                    <div id="anh">  
                    <div class="mb-lg-0 ml-0">
                              <img class="image" src="<%- firstImage(nt.Anh_NT) %>" width="auto" height="about">
                      </div>
                    </div>
                      <div class="media-body m-3">
                          <h6 class="media-title font-weight-semibold text-success">
                              <a href="#" data-abc="true" id="tomtat" style="
                              color: rgb(97, 95, 95);font-weight: bolder; font-size: 14pt;"><%= nt.TenNhaTro_NT %></a>
                          </h6>

                          <ul class="list-inline list-inline-dotted mb-3 mb-lg-2" style="font-size: 10pt;">
                              <li class="list-inline-item"><i><%= new Date(nt.NgayCapNhat_NT.toISOString()).toLocaleString("vi-VN") %></i></li>
                              
                          </ul>
                          <div>&nbsp;</div>
                          <p class="mb-3"><i class="bi bi-telephone-fill"></i>  (+84) <%= nt.SoDienThoai_NT %></p>

                          <li class="list-inline-item bi bi-geo-alt-fill" id="tomtat">
                            <a href="#" data-abc="true" class="text-dark"><%= nt.DiaChi_NT %></a>
                          </li>
                          
                      </div>
                      
                      <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                          <h5 class="mb-0 font-weight-bold mt-3">900.000 đ</h3>
                            
                          <div>
                            <% for(var i = 1; i <= nt.Diem_TB; i++){ %>
                            <i class="bi bi-star-fill" style="color: rgb(239, 204, 32)"></i>
                            <% } %>  
                            <!--i style="color: silver;" class="bi bi-star-fill"></!--i-->
                          </div>

                          <div class="text-muted"><%= nt.SoLuong_DG %> đánh giá</div>

                          <a type="button" style="border-radius: 65px;" class="btn btn-dark mt-4" href="/nhatro/chitiet/<%= nt.ID_NT %>">Xem chi tiết</a>
                      </div>
                  </div>

        </div>                     
      </div>
      
      <% }); %>
      </div>
     

      <!--card-->   

    <div>
      
      <figcaption class="figure-caption pt-3">TIN TỨC</figcaption>
    </div>
    <iframe src="https://www.google.com/maps/@15.7477182,103.9401024,6z"></iframe>

