                  <!--End tiện ích-->
      
                  <div class="bg-white widget card-tmp">
                    <h3 class="h4 text-black widget-title mb-3">Thông tin mô tả</h3>
                    <p><%= nt.ThongTin_NT %></p>
                  </div>

                  
                  </div>

                </div>
                
              </div>
            </div>
