          <!--Body-->
          <div class="site-section site-section-sm">
            <div class="container">
              <div class="row">
                <div class="col-lg-8">
                  <div>
                    <div class="slide-one-item home-slider owl-carousel">
                      <div><img src="http://localhost:3000/assets/images/hero_bg_1.jpg" alt="Image" class="img-fluid"></div>
                      <div><img src="http://localhost:3000/assets/images/hero_bg_2.jpg" alt="Image" class="img-fluid"></div>
                      <div><img src="http://localhost:3000/assets/images/hero_bg_3.jpg" alt="Image" class="img-fluid"></div>
                    </div>
                  </div>
                  <div class="bg-white property-body">
                    <div class="row mb-5">
                      <div class="col-md-6">
                        <strong class="text-success h1 mb-3"><%- numberFormat(nt.Gia_NT) %> đ</strong>
                      </div>
                      <div class="col-md-6">
                        <ul class="property-specs-wrap mb-3 mb-lg-0  float-lg-right">
                        <li>
                          <span class="property-specs">Ngày đăng ký</span>
                          <span class="property-specs-number"><i><%= new Date(nt.NgayCapNhat_NT.toISOString()).toLocaleString("vi-VN") %></i></span>
                          
                        </li>
                        
                      </ul>
                      </div>
                    </div>
                    <div class="row mb-5">
                      <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                        <span class="d-inline-block text-black mb-0 caption-text">Địa chỉ</span>
                        <strong class="d-block"><%= nt.DiaChi_NT %></strong><input type="hidden" id="diachi" value="<%= nt.DiaChi_NT %>">
                      </div>
                      <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                        <span class="d-inline-block text-black mb-0 caption-text">Year Built</span>
                        <strong class="d-block">2018</strong>
                      </div>
                      <div class="col-md-6 col-lg-4 text-center border-bottom border-top py-3">
                        <span class="d-inline-block text-black mb-0 caption-text">Price/Sqft</span>
                        <strong class="d-block">$520</strong>
                      </div>
                    </div>
                    <h2 class="h4 text-black">Xem địa chỉ trên bản đồ</h2>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d981.1383856737295!2d105.43183482919915!3d10.37753709953707!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x310a735c1217f3e5%3A0xeda22bd18403a8dc!2zVHLhu40gTmfDom4gTmfDom4!5e0!3m2!1sen!2s!4v1665210016415!5m2!1sen!2s" width="100%" height="300px" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    
                    <div class="row no-gutters mt-5">
                      <div class="col-12">
                        <h2 class="h4 text-black mb-3">Gallery</h2>
                      </div>
                      <div class="col-sm-6 col-md-4 col-lg-3">
                        <a href="http://localhost:3000/assets/images/img_1.jpg" class="image-popup gal-item"><img src="http://localhost:3000/assets/images/img_1.jpg" alt="Image" class="img-fluid"></a>
                      </div>
                      <div class="col-sm-6 col-md-4 col-lg-3">
                        <a href="http://localhost:3000/assets/images/img_2.jpg" class="image-popup gal-item"><img src="http://localhost:3000/assets/images/img_2.jpg" alt="Image" class="img-fluid"></a>
                      </div>
                      <div class="col-sm-6 col-md-4 col-lg-3">
                        <a href="http://localhost:3000/assets/images/img_3.jpg" class="image-popup gal-item"><img src="http://localhost:3000/assets/images/img_3.jpg" alt="Image" class="img-fluid"></a>
                      </div>
                      <div class="col-sm-6 col-md-4 col-lg-3">
                        <a href="http://localhost:3000/assets/images/img_4.jpg" class="image-popup gal-item"><img src="http://localhost:3000/assets/images/img_4.jpg" alt="Image" class="img-fluid"></a>
                      </div>
                      
                    </div>
                  </div>
                </div>

                <div class="col-lg-4">
                    
                <!--Tiện ích-->
                  <div class="bg-white widget card-tmp">
      
                    <h3 class="h4 text-black widget-title mb-3">Tiện ích</h3> 
                    <div class="row">
                      <div class="col-6">
                        <p><i class="fas fa-wifi text-success"></i> 
