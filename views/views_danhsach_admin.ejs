  <body>
    <h3>Dữ liệu quản trị viên!</h3>
    <form action="/views_danhsach_admin/them">
    <button  class="button-87" role="button">Thêm dữ liệu+</button>
  </form>
   
    <table class="content-table">
      <thead>
        <tr class="bg-success">
          <th scope="col" width="10%">ID Admin</th>
          <th scope="col" width="10%" >Tên đăng nhập</th>
          <th scope="col" width="10%" >Mật khẩu</th>
          <th scope="col">Họ tên</th>
          <th scope="col">Giới tính</th>
          <th scope="col"  width="20%">Email</th>
          <th scope="col">Điện thoại</th>
          <th scope="col">Ảnh đại diện</th>
          <th width="5%">Sửa</th>
					<th width="5%">Xóa</th>
        </tr>
      </thead>
      <tbody>
        <% tbl_admin.forEach(function(tk){ %>

        <tr>
          <th scope="row"><%= tk.ID_AD %></th>
          <td><%=tk.TenDangNhap_AD %></td>
          <td>******</td>
          <td><%=tk.HoTen_AD %></td>
          <td><%=tk.GioiTinh %></td>
          <td><%=tk.Email_AD %></td>
          <td><%=tk.DienThoai_AD %></td>
          <td ><img src="<%- tk.AnhDaiDien_AD %>" border-radius="10px" width="100" height="100" ></td>
          <td > <a style="font-size: 25px;color:blue " href="/views_danhsach_admin/sua/<%=tk.ID_AD %>" > Sửa <i  class="fa-solid fa-pen-to-square"></i></a></td>
          <td ><a style="font-size: 25px;color:red " href="/views_danhsach_admin/xoa/<%= tk.ID_AD %>" onclick="return confirm('Bạn có muốn xóa tài khoản <%= tk.HoTen_AD %> không?');">Xóa <i class="fa-sharp fa-solid fa-trash-can"></i></a></td>
          
        </tr>
      </tbody>
      <% });%>
