          <!-- <th scope="col">Ngày đăng</th> -->
          <th width="5%">Sửa</th>
		<th width="5%">Xóa</th>
        </tr>
      </thead>
      <tbody>
        <% tbl_nguoidung.forEach(function(nd){ %>

        <tr>
          <!-- <th scope="row"><%= nd.ID_ND %></th> -->
          <th><%= nd.Ten_ND %></th>
